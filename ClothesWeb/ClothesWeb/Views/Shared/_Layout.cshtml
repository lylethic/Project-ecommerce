  <div class="search-popup">
    <div class="search-popup-container">
      <form role="search" method="get" class="search-form" action="">
        <input type="search"
               id="search-form"
               class="search-field"
               placeholder="Type and press enter"
               value=""
               name="s" />
        <button type="submit" class="search-submit">
          <a href="#"><i class="icon icon-search"></i></a>
        </button>
      </form>

      <h5 class="cat-list-title">Browse Categories</h5>

      <ul class="cat-list">
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Men Jackets">Men Jackets</a>
        </li>
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Fashion">Fashion</a>
        </li>
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Casual Wears">Casual Wears</a>
        </li>
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Women">Women</a>
        </li>
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Trending">Trending</a>
        </li>
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Hoodie">Hoodie</a>
        </li>
        <li class="cat-list-item">
          <a asp-area="" asp-controller="Home" asp-action="Shop" title="Kids">Kids</a>
        </li>
      </ul>
    </div>
  </div>

  <header id="header">
    <div id="header-wrap">
      <nav class="secondary-nav border-bottom">
        <div class="container">
          <div class="row d-flex align-items-center">
            <div class="col-md-4 header-contact">
              <p>Let's talk! <strong>+57 444 11 00 35</strong></p>
            </div>
            <div class="col-md-4 shipping-purchase text-center">
              <p>Free shipping on a purchase value of $200</p>
            </div>
            <div class="col-md-4 col-sm-12 user-items">
              <ul class="d-flex justify-content-end list-unstyled">
                <li>
                  <a asp-area="" asp-controller="Home" asp-action="Login">
                    <i class="icon icon-user"></i>
                  </a>
                </li>
                <li>
                  <a asp-area="" asp-controller="Home" asp-action="Cart">
                    <i class="icon icon-shopping-cart"></i>
                  </a>
                </li>
                <li>
                  <a href="~/wishlist.cshtml">
                    <i class="icon icon-heart"></i>
                  </a>
                </li>
                <li class="user-items search-item pe-3">
                  <a asp-area="" asp-controller="Home" asp-action="Search" class="search-button">
                    <i class="icon icon-search"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
      <nav class="primary-nav padding-small">
        <div class="container">
          <div class="row d-flex align-items-center">
            <div class="col-lg-2 col-md-2">
              <div class="main-logo">
                <a href="~/index.cshtml">
                  <img src="~/images/main-logo.png" alt="logo" />
                </a>
              </div>
            </div>
            <div class="col-lg-10 col-md-10">
              <div class="navbar">
                <div id="main-nav"
                     class="stellarnav d-flex justify-content-end right">
                  <ul class="menu-list">
                    <li class="menu-item has-sub">
                      <a class="item-anchor active" asp-area="" asp-controller="Home" asp-action="Index">Home </a>
                    </li>

                    <li class="menu-item has-sub">
                      <a class="item-anchor" data-effect="About" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>

                    <li class="menu-item has-sub">
                      <a class="item-anchor" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                    </li>

                    <li class="menu-item has-sub">
                      <a class="item-anchor" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                    </li>

                    <li class="menu-item has-sub">
                      <a class="item-anchor" data-effect="Contact" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </header>

  @RenderBody()

